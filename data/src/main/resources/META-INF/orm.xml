    <description>Mappings for results-data.</description>
    <!--
    <package>org.gemini.results.model</package>
    -->

    <entity class="org.gemini.results.model.Competition"
            name="Competition">
        <table name="COMPETITION"/>
        <convert converter="org.gemini.results.data.XMLGregorianCalendarConverter"
                attribute-name="time"/>

        <attributes>
            <id name="id"></id>
            <basic name="name"></basic>
            <basic name="organizer"></basic>
            <basic name="time"/>
            <transient name="groups"/>
            <transient name="classes"/>
            <transient name="competitors"/>
        </attributes>
    </entity>

    <entity class="org.gemini.results.model.Clazz" name="Clazz">
        <table name="CLASS"></table>
        <convert converter="org.gemini.results.data.DurationConverter"
                attribute-name="offset"/>

        <attributes>
            <id name="id"></id>
        </attributes>
    </entity>

</entity-mappings>
